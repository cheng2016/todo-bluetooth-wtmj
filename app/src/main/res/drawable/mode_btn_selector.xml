<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- 定义当button获得pressed时的形态-->
        <shape>
            <stroke android:width="1px" android:color="@color/stroke_host" />
            <gradient android:centerColor="#5f9576"
                android:endColor="#1e5f55"
                android:startColor="#1e5f55"
                android:angle="180"/>
            <corners android:radius="3dp"></corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <!-- 定义当button获得focus时的形态-->
        <shape>
            <stroke android:width="1px" android:color="@color/stroke_host" />
            <gradient android:centerColor="#5f9576"
                android:endColor="#1e5f55"
                android:startColor="#1e5f55"
                android:angle="180"/>
            <corners android:radius="3dp"></corners>
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="1px" android:color="@color/stroke_host" />
            <gradient android:centerColor="@color/solid_host_black"
                android:endColor="@color/solid_host_black"
                android:startColor="@color/solid_host_black"
                android:angle="180"/>
            <corners android:radius="3dp"></corners>
        </shape>
    </item>
</selector>