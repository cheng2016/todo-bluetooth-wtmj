<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dip" />
            <stroke
                android:width="1px"
                android:color="#3E7965" />
            <solid android:color="#F3DED7" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerColor="#588F72"
                    android:centerY="0.4"
                    android:endColor="#1F5F56"
                    android:startColor="#1F5F56" />
                <corners android:radius="3dip" />
            </shape>
        </clip>
    </item>

</layer-list>