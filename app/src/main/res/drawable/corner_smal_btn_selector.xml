<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/right_img_press" />
            <stroke android:width="1px" android:color="@color/stroke_host" />
            <corners  android:radius="3dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/right_img_press" />
            <stroke android:width="1px" android:color="@color/stroke_host" />
            <corners  android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/solid_host_black" />
            <stroke android:width="1px" android:color="@color/stroke_host" />
            <corners  android:radius="3dp" />
        </shape>
    </item>


</selector>