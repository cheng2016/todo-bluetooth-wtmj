<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="actionBarStyle">@style/ClubToolbar</item>
        <!-- 设置activity切换动画 -->
<!--        <item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
        <item name="contentInsetEnd">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <!-- 1、消除应用启动闪黑屏 -->
    <style name="Theme.splash" parent="AppTheme.NoActionBar">
        <!-- 设置activity切换动画为无-->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 设置activity切换动画 -->
<!--        <item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/corner_btn_selector</item>
        <item name="android:shadowColor">@color/shadow_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="splitline_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.3px</item>
        <item name="android:background">@color/line_normal</item>
    </style>
    
    <style name="ListStyle">
        <!--<item name="android:scrollbarStyle">outsideOverlay</item>-->
        <item name="android:divider">@null</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/circle_selector</item>
        <item name="android:gravity">center|clip_vertical</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
