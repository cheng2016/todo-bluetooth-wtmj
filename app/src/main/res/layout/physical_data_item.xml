<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_size_30"
    android:layout_marginRight="@dimen/widget_size_3"
    android:layout_gravity="center"
    android:weightSum="12">
    <ImageView
        android:id="@+id/tagIv"
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:layout_height="@dimen/widget_size_25"
        android:src="@drawable/physical"
        android:layout_marginTop="@dimen/widget_size_1"
        android:padding="@dimen/widget_size_3"
        android:gravity="center"/>
    <TextView
        android:id="@+id/startTimeTv"
        android:text="05/01\n17:10"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/font_size_11"
        android:gravity="center"
        android:layout_toRightOf="@id/tagIv"/>
    <TextView
        android:id="@+id/endTimeTv"
        android:text="05/01\n17:30"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/font_size_11"
        android:layout_toRightOf="@id/startTimeTv"/>
    <TextView
        android:id="@+id/durationTv"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="tag"
        android:layout_toRightOf="@id/endTimeTv"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/font_size_11"/>
    <TextView
        android:id="@+id/distanceTv"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="@dimen/widget_size_30"
        android:text="tag"
        android:layout_toRightOf="@id/durationTv"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/font_size_11"/>
    <TextView
        android:id="@+id/caloriesTv"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="@dimen/widget_size_30"
        android:text="tag"
        android:layout_toRightOf="@id/distanceTv"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/font_size_11"/>
    <TextView
        android:id="@+id/avgSpeedTv"
        android:layout_weight="2.2"
        android:layout_width="0dp"
        android:layout_height="@dimen/widget_size_30"
        android:text="tag"
        android:layout_toRightOf="@id/caloriesTv"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/font_size_11"/>

</LinearLayout>
