<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/numberTv"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_size_30"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="@dimen/widget_size_8"
        android:text="01"
        android:textColor="@color/text_result"/>

    <TextView
        android:id="@+id/nameTv"
        android:layout_toEndOf="@+id/numberTv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_size_30"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="@dimen/widget_size_8"
        android:textColor="@color/text_result"
        android:text="Wendy" />

    <TextView
        android:id="@+id/contentTv"
        android:layout_toEndOf="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_size_30"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="@dimen/widget_size_8"
        android:textColor="@color/text_result"
        android:text="3:30 complete"/>

    <ImageView
        android:src="@drawable/drop_down"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/widget_size_8"
        android:layout_width="@dimen/widget_size_15"
        android:layout_height="@dimen/widget_size_15" />

</RelativeLayout>