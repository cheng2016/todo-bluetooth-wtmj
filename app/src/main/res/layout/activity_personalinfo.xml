<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2DED7"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_45"
        android:background="@drawable/app_bar_bg">

        <ImageView
            android:id="@+id/iv_personal"
            android:layout_width="@dimen/widget_size_20"
            android:layout_height="@dimen/widget_size_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:src="@drawable/btn_nav" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_trainer"
            android:text="Personal Info"
            android:textColor="#ECDAD4"
            android:textSize="@dimen/font_size_25" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/widget_size_80"
            android:layout_height="@dimen/widget_size_80"
            android:layout_centerInParent="true"
            android:src="@drawable/crown" />

    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_size_5"
        android:orientation="horizontal"
        android:paddingTop="@dimen/widget_size_20"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Username"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="0dp"
            android:layout_height="@dimen/widget_size_25"
            android:layout_marginRight="@dimen/widget_size_30"
            android:layout_toRightOf="@+id/tv_username"
            android:layout_weight="2"
            android:background="@drawable/edit_background"
            android:enabled="false"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_size_5"
        android:orientation="horizontal"
        android:paddingTop="@dimen/widget_size_10"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Email"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="@dimen/widget_size_25"
            android:layout_marginRight="@dimen/widget_size_30"
            android:layout_toRightOf="@+id/tv_username"
            android:layout_weight="2"
            android:background="@drawable/edit_background"
            android:enabled="false"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_size_5"
        android:layout_marginTop="@dimen/widget_size_15"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_dateofbirth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date of birth"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_16" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_fu14"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_month"
                        android:layout_width="@dimen/widget_size_45"
                        android:layout_height="@dimen/widget_size_25"
                        android:gravity="center_vertical"
                        android:text="MM"
                        android:textColor="#333333"
                        android:textSize="@dimen/font_size_13" />

                    <ImageView
                        android:id="@+id/iv_month"
                        android:layout_width="@dimen/widget_size_20"
                        android:layout_height="@dimen/widget_size_20"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/v_grey_icon"
                        android:visibility="gone" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_month"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/edit_background"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_day"

                        android:layout_width="@dimen/widget_size_45"
                        android:layout_height="@dimen/widget_size_25"
                        android:gravity="center_vertical"
                        android:text="DD"
                        android:textColor="#333333"
                        android:textSize="@dimen/font_size_13" />

                    <ImageView
                        android:id="@+id/iv_day"
                        android:layout_width="@dimen/widget_size_20"
                        android:layout_height="@dimen/widget_size_20"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/v_grey_icon"
                        android:visibility="gone" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_day"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_2"
                android:background="@drawable/edit_background"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_year"
                        android:layout_width="@dimen/widget_size_45"
                        android:layout_height="@dimen/widget_size_25"
                        android:gravity="center_vertical"
                        android:text="YY"
                        android:textColor="#333333"
                        android:textSize="@dimen/font_size_13" />

                    <ImageView
                        android:id="@+id/iv_year"
                        android:layout_width="@dimen/widget_size_20"
                        android:layout_height="@dimen/widget_size_20"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/v_grey_icon"
                        android:visibility="gone" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_year"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_size_5"
        android:layout_marginTop="@dimen/widget_size_15"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Height"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <EditText

                android:id="@+id/et_height"
                android:layout_width="@dimen/widget_size_45"
                android:layout_height="@dimen/widget_size_25"
                android:background="@drawable/edit_background"
                android:enabled="false"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="cm"
                android:textColor="#333333"
                android:textSize="@dimen/font_size_13" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_size_5"
        android:layout_marginTop="@dimen/widget_size_15"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weight"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_fu3"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_weight"
                android:layout_width="@dimen/widget_size_45"
                android:layout_height="@dimen/widget_size_25"
                android:background="@drawable/edit_background"
                android:enabled="false"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_5"
                android:text="kg"
                android:textColor="#333333"
                android:textSize="@dimen/font_size_13" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_size_5"
        android:layout_marginTop="@dimen/widget_size_15"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_16" />

        <LinearLayout
            android:id="@+id/ll_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_49"
            android:background="@drawable/edit_background"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_gender1"
                android:layout_width="@dimen/widget_size_45"
                android:layout_height="@dimen/widget_size_25"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Male"
                android:textColor="#333333"
                android:textSize="@dimen/font_size_13" />

            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="@dimen/widget_size_20"
                android:layout_height="@dimen/widget_size_20"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/v_grey_icon"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_edit"
            android:layout_width="@dimen/widget_size_80"
            android:layout_height="@dimen/widget_size_30"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_trainbackground2"
            android:gravity="center"
            android:text="Edit"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/rl_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:layout_weight="1">

            <Button
                android:id="@+id/bt_ok"
                android:layout_width="@dimen/widget_size_80"
                android:layout_height="@dimen/widget_size_30"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/edit_trainbackground2"
                android:gravity="center"
                android:text="OK"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_16"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:layout_weight="1">

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="@dimen/widget_size_80"
                android:layout_height="@dimen/widget_size_30"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/edit_trainbackground2"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_16"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>