<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C9BEBB"
        android:visibility="visible" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/nav_route1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_30"
            android:layout_marginTop="@dimen/font_size_10"
            android:text="走樟樹二路"
            android:textSize="@dimen/font_size_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/widget_size_20"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1小時25分鐘"
                android:textColor="#F07B52"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/nav_distance1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25公里"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>