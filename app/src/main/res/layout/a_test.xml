<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <com.wistron.swpc.android.WiTMJ.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_30"
                android:layout_marginTop="@dimen/widget_size_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/PermissionsTitle"
                    android:layout_width="@dimen/widget_size_100"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/widget_size_10"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:gravity="center_vertical|left"
                    android:text="Permissions"
                    android:textColor="@color/text_host"
                    android:textSize="@dimen/font_size_15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/PermissionsTitle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:background="@drawable/corner_edit_bg">

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:dropDownVerticalOffset="@dimen/widget_size_27" />

                    <ImageView
                        android:layout_width="@dimen/widget_size_15"
                        android:layout_height="@dimen/widget_size_15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/widget_size_5"
                        android:src="@drawable/rop_p" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_30"
                android:layout_marginTop="@dimen/widget_size_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameTitle"
                    android:layout_width="@dimen/widget_size_100"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/PermissionsTitle"
                    android:layout_marginLeft="@dimen/widget_size_10"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:gravity="center_vertical|left"
                    android:text="Name"
                    android:textColor="@color/text_host"
                    android:textSize="@dimen/font_size_15" />


                <EditText
                    android:id="@+id/nameTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:background="@color/solid_host_black"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/widget_size_5"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_30"
                android:layout_marginTop="@dimen/widget_size_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateTitle"
                    android:layout_width="@dimen/widget_size_100"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/nameTitle"
                    android:layout_marginLeft="@dimen/widget_size_10"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:gravity="center_vertical|left"
                    android:text="startDate"
                    android:textColor="@color/text_host"
                    android:textSize="@dimen/font_size_15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/dateTitle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:background="@drawable/corner_edit_bg_normal"
                    android:clickable="true"
                    android:padding="@dimen/widget_size_5">

                    <TextView
                        android:id="@+id/startdateTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/title_text1"
                        android:textSize="@dimen/font_size_13" />

                    <ImageView
                        android:layout_width="@dimen/widget_size_15"
                        android:layout_height="@dimen/widget_size_15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/date" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_30"
                android:layout_marginTop="@dimen/widget_size_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timeTitle"
                    android:layout_width="@dimen/widget_size_100"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/dateTitle"
                    android:layout_marginLeft="@dimen/widget_size_10"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textColor="@color/text_host"
                    android:textSize="@dimen/font_size_15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/timeTitle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:background="@drawable/corner_edit_bg_normal"
                    android:padding="@dimen/widget_size_5">

                    <TextView
                        android:id="@+id/starttimeTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text=""
                        android:textColor="@color/title_text1"
                        android:textSize="@dimen/font_size_13" />

                    <ImageView
                        android:layout_width="@dimen/widget_size_15"
                        android:layout_height="@dimen/widget_size_15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/clock" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_30"
                android:layout_marginTop="@dimen/widget_size_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/widget_size_100"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/nameTitle"
                    android:layout_marginLeft="@dimen/widget_size_10"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:gravity="center_vertical|left"
                    android:text="endDate"
                    android:textColor="@color/text_host"
                    android:textSize="@dimen/font_size_15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/dateTitle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:background="@drawable/corner_edit_bg_normal"
                    android:clickable="true"
                    android:padding="@dimen/widget_size_5">

                    <TextView
                        android:id="@+id/enddateTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/title_text1"
                        android:textSize="@dimen/font_size_13" />

                    <ImageView
                        android:layout_width="@dimen/widget_size_15"
                        android:layout_height="@dimen/widget_size_15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/date" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_30"
                android:layout_marginTop="@dimen/widget_size_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/widget_size_100"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/dateTitle"
                    android:layout_marginLeft="@dimen/widget_size_10"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textColor="@color/text_host"
                    android:textSize="@dimen/font_size_15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/timeTitle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:background="@drawable/corner_edit_bg_normal"
                    android:padding="@dimen/widget_size_5">

                    <TextView
                        android:id="@+id/endtimeTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text=""
                        android:textColor="@color/title_text1"
                        android:textSize="@dimen/font_size_13" />

                    <ImageView
                        android:layout_width="@dimen/widget_size_15"
                        android:layout_height="@dimen/widget_size_15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/clock" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_30"
                android:layout_marginTop="@dimen/widget_size_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/startRoutTitle"
                    android:layout_width="@dimen/widget_size_100"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/timeTitle"
                    android:layout_marginLeft="@dimen/widget_size_10"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:gravity="center_vertical|left"
                    android:text="Route"
                    android:textColor="@color/text_host"
                    android:textSize="@dimen/font_size_15" />

                <RelativeLayout
                    android:id="@+id/startPlaceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/startRoutTitle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:background="@drawable/corner_edit_bg_normal"
                    android:padding="@dimen/widget_size_5">

                    <TextView
                        android:id="@+id/startPlaceTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@color/solid_host"
                        android:gravity="center_vertical|left"
                        android:text=""
                        android:textColor="@color/title_text1"
                        android:textSize="@dimen/font_size_13" />

                    <ImageView
                        android:layout_width="@dimen/widget_size_15"
                        android:layout_height="@dimen/widget_size_15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/navigation5" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_30"
                android:layout_marginTop="@dimen/widget_size_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/endRoutTitle"
                    android:layout_width="@dimen/widget_size_100"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/startRoutTitle"
                    android:layout_marginLeft="@dimen/widget_size_10"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_host"
                    android:textSize="@dimen/font_size_15" />

                <RelativeLayout
                    android:id="@+id/endPlaceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/endRoutTitle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:background="@drawable/corner_edit_bg_normal"
                    android:padding="@dimen/widget_size_5">

                    <TextView
                        android:id="@+id/endPlaceTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@color/solid_host"
                        android:gravity="center_vertical|left"
                        android:text=""
                        android:textColor="@color/title_text1"
                        android:textSize="@dimen/font_size_13" />

                    <ImageView
                        android:layout_width="@dimen/widget_size_15"
                        android:layout_height="@dimen/widget_size_15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/navigation6" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_85"
                android:layout_marginTop="@dimen/widget_size_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/participantTitle"
                    android:layout_width="@dimen/widget_size_100"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/endRoutTitle"
                    android:layout_marginLeft="@dimen/widget_size_10"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:gravity="top"
                    android:text="Participant"
                    android:textColor="@color/text_host"
                    android:textSize="@dimen/font_size_15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/participantTitle"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:background="@drawable/corner_edit_bg_normal"
                    android:paddingBottom="@dimen/widget_size_5"
                    android:paddingLeft="@dimen/widget_size_5">

                    <com.wistron.swpc.android.WiTMJ.widget.FlowLayout
                        android:id="@+id/fowLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/widget_size_3" />

                    <ImageView
                        android:id="@+id/addImg"
                        android:layout_width="@dimen/widget_size_15"
                        android:layout_height="@dimen/widget_size_15"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/widget_size_5"

                        android:layout_marginTop="@dimen/widget_size_5"
                        android:src="@drawable/participant" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_85"
                android:layout_marginTop="@dimen/widget_size_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/NoteTitle"
                    android:layout_width="@dimen/widget_size_100"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/participantTitle"
                    android:layout_marginLeft="@dimen/widget_size_10"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:gravity="top"
                    android:text="Note"
                    android:textColor="@color/text_host"
                    android:textSize="@dimen/font_size_15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/widget_size_80"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/NoteTitle"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:background="@drawable/corner_edit_bg"
                    android:padding="@dimen/widget_size_5">

                    <EditText
                        android:id="@+id/noteEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/solid_host_black"
                        android:gravity="left|top"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_13" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_40"
                android:layout_below="@+id/NoteTitle"
                android:layout_marginBottom="@dimen/widget_size_20"
                android:layout_marginTop="@dimen/widget_size_20"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/okBtn"
                    style="@style/ButtonStyle"
                    android:layout_width="@dimen/widget_size_100"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:text="Ok" />

                <Button
                    android:id="@+id/deleteBtn"
                    style="@style/ButtonStyle"
                    android:layout_width="@dimen/widget_size_100"
                    android:layout_height="match_parent"
                    android:text="Delete" />
            </LinearLayout>
        </LinearLayout>
    </com.wistron.swpc.android.WiTMJ.widget.ReboundScrollView>
</RelativeLayout>
