<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0D0CA"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:layout_marginTop="@dimen/widget_size_10"

            android:text="About  WiTMJ"
            android:textColor="#FF051008"
            android:textSize="@dimen/font_size_15" />

        <TextView
            android:id="@+id/tv_line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_1"
            android:layout_marginTop="@dimen/widget_size_10"
            android:background="#C9BEBB" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2DED7"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:layout_marginTop="@dimen/widget_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="WiTMJ  Version : "
                android:textColor="#FF051008"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_5"
                android:text="@string/version"
                android:textColor="#FF051008"
                android:textSize="@dimen/font_size_15" />

        </LinearLayout>

        <TextView
            android:layout_marginLeft="@dimen/widget_size_15"
            android:id="@+id/tv_line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_1"
            android:layout_marginTop="@dimen/widget_size_10"
            android:background="#C9BEBB" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2DED7"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_size_10"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:layout_marginTop="@dimen/widget_size_10"
            android:text="Copyright :  Wistron"
            android:textColor="#FF051008"
            android:textSize="@dimen/font_size_15" />

        <TextView
            android:id="@+id/tv_line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_1"
            android:background="#C9BEBB" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_size_15"
        android:layout_marginTop="@dimen/widget_size_10"
        android:text="Contact  us"
        android:textColor="#FF051008"
        android:textSize="@dimen/font_size_15" />

    <TextView
        android:id="@+id/tv_line4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_1"
        android:layout_marginTop="@dimen/widget_size_10"
        android:background="#C9BEBB" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F2DED7">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_size_15"
        android:layout_marginTop="@dimen/widget_size_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_15" />

        <LinearLayout
            android:id="@+id/ll_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="service@wistron.com"
                android:textColor="#312EF5"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#312EF5" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_line5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_1"
        android:layout_marginTop="@dimen/widget_size_10"
        android:background="#C9BEBB" />
    </LinearLayout>
</LinearLayout>
